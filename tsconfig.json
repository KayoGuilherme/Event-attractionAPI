{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "typeRoots" : ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "@types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
