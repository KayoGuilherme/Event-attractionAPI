generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  name     String
  email    String        @unique
  CPF      String        @unique
  password String
  roleId   Int           @default(1)
  role     Authorization @relation(fields: [roleId], references: [id_role])
}

model Authorization {
  id_role          Int    @id @default(autoincrement())
  name_role        String
  discription_role String
  User             User[]
}

model Event {
  id_event    Int           @id @default(autoincrement())
  name_event  String
  discription String
  address     String
  city        String
  date_event  String
  attractions attractions[]
}

model attractions {
  id                       Int           @id @default(autoincrement())
  name                     String
  hours                    String
  date                     String
  discription              String
  limit                    Int
  active                   Boolean
  indicated_classification Int
  event_id                 Int
  event                    Event         @relation(fields: [event_id], references: [id_event])
  Inscription              Inscription[]
}

model Inscription {
  id           Int         @id @default(autoincrement())
  name         String
  age          Int
  attractionId Int
  attraction   attractions @relation(fields: [attractionId], references: [id])
}
